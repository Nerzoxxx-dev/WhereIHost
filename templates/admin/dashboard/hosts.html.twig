  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">{{ 'pages'|trans({}, 'base') }}</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">{{ 'dashboard'|trans({}, 'admin') }}</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">{{ 'hosts'|trans({}, 'admin') }}</h6>
        </nav>
          <ul class="navbar-nav  justify-content-end">
            <li class="nav-item d-flex align-items-center">
              <a href="/admin/profile" class="nav-link text-body font-weight-bold px-0">
                <i class="fa fa-user me-sm-1"></i>
                <span class="d-sm-inline d-none">{{ 'profile'|trans({}, 'base') }}</span>
              </a>
            </li>
            <li class="nav-item d-flex ps-3 align-items-center">
              <a href="/admin/logout" class="nav-link text-body font-weight-bold px-0">
                <i class="fa fa-sign-out-alt me-sm-1"></i>
              </a>
            </li>
            <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </a>
            </li>
            <li class="nav-item px-3 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0">
                <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
      <div class="row mb-4">
        <div class="col-lg-11 col-md-6 mb-md-0 mb-4">
          <div class="card">
            <div class="card-header pb-0">
              <div class="row">
                <div class="col-lg-6 col-7">
                  <h6>{{ "admin.all_hosts"|trans({}, "admin") }}</h6>
                  <p class="text-sm mb-0">
                    <i class="fa fa-check text-info" aria-hidden="true"></i>
                    <span class="font-weight-bold ms-1">{{ "on"|trans({}, "base") }} {{ datas.hostsCount }}</span> {{ 'hosts'|trans({}, "admin")}}
                  </p>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{ 'hosts'|trans({}, "admin")}}</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">{{ "admin.opinions_number"|trans({}, 'admin')}}</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{ "admin.opinions_satisfaction"|trans({}, 'admin')}}</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{ "admin.website"|trans({}, 'admin')}}</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <form method="POST" action="/admin/hosts/search"> 
                        <div class="input-group input-group-outline">
                          <label class="form-label">{{ 'search'|trans({}, 'base') }}</label>
                          <input type="text" name="search" class="form-control">
                          <input type="hidden" name="token" value="{{ csrf_token('authenticate_admin') }}"/>
                        </div>
                        <input class="btn btn-primary mt-2" type="submit" value="{{ 'valid'|trans({}, 'base')}}"/>
                       </form></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for data in datas.allHosts %}
                          <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                            <img src="{{ asset('img/hosts/' ~ data.logoFilename) }}" height="30px" />  {{ data.name }} {% if data.isVerified %} <i style="color: #548CFF;" class="fas fa-check"></i> {% endif %}</h6>
                          </div>
                        </div>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <span class="text-xs font-weight-bold"> {{ data.opinions_number }} </span>
                      </td>
                      <td class="align-middle">
                        <div class="progress-wrapper w-75 mx-auto">
                          <div class="progress-info">
                            <div class="progress-percentage">
                              <span class="text-xs font-weight-bold">{{ data.note }}%</span>
                            </div>
                          </div>
                          <div class="progress center">
                            <div class="progress-bar bg-gradient-info w-{{ data.note }}" role="progressbar" aria-valuenow="{{ data.note }}" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </div>
                      </td>
                      <td class="align-middle text-sm text-center">
                        <a href="{{ data.website }}" class="text-xs font-weight-bold"> {{ data.website }} </a>
                      </td>
                      <td class="align-middle text-sm text-center">
                        <a href="/admin/hosts/{{ data.id }}/manage" class="text-xs font-weight-bold"> GÃ©rer </a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
  </main>
  <div class="fixed-plugin">
    <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
      <i class="material-icons py-2">settings</i>
    </a>
    <div class="card shadow-lg">
      <div class="card-header pb-0 pt-3">
        <div class="float-start">
          <h5 class="mt-3 mb-0">{{ 'dashboard_parameters'|trans({}, 'admin') }}</h5>
          <p>{{ 'dashboard_parameters.description'|trans({}, 'admin') }}</p>
        </div>
        <div class="float-end mt-4">
          <button class="btn btn-link text-dark p-0 fixed-plugin-close-button">
            <i class="material-icons">clear</i>
          </button>
        </div>
        <!-- End Toggle Button -->
      </div>
      <hr class="horizontal dark my-1">
      <div class="card-body pt-sm-3 pt-0">
        <!-- Sidebar Backgrounds -->
        <div class="mt-2 d-flex">
          <h6 class="mb-0">{{ 'dashboard.parameters.light_dark'|trans({}, 'admin') }}</h6>
          <div class="form-check form-switch ps-0 ms-auto my-auto">
            <input class="form-check-input mt-1 ms-auto" type="checkbox" id="dark-version" onclick="darkMode(this)">
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}